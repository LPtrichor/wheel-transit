<view class="index-container">
  <!--首页背景图-->
  <view class="window-bgc"></view>

  <!-- 页面主体区域 -->
  <view class="container">
    <!-- 轮播图区域 -->
    <view class="banner-section">
      <swiper class="banner-swiper" indicator-dots autoplay circular>
        <swiper-item wx:for="{{banners}}" wx:key="id">
          <navigator url="{{item.linkUrl}}">
            <image src="{{item.imageUrl}}" mode="widthFix" class="banner-image"></image>
          </navigator>
        </swiper-item>
      </swiper>
    </view>

    <!-- 服务入口区域 -->
    <view class="service-section">
      <view class="service-title">物流服务</view>
      <view class="service-grid">
        <view class="service-item" wx:for="{{serviceEntries}}" wx:key="id" data-url="{{item.url}}" bindtap="goToService">
          <view class="service-icon">
            <view class="iconfont icon-{{item.icon}}"></view>
          </view>
          <view class="service-name">{{item.name}}</view>
        </view>
      </view>
    </view>

    <!-- 宣传区域 -->
    <view class="promo-section">
      <image class="img-index" src="https://wheel-transit.oss-cn-beijing.aliyuncs.com/index/index_pic2.jpg" mode="widthFix" />
    </view>
  </view>
</view>